@using Common
@model Datas.Models.ViewModels.JewelryModel

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CurrentStatus" class="control-label">Tình trạng hiện tại</label>
                            <input asp-for="CurrentStatus" class="form-control" placeholder="Mô tả tình trạng sử dụng và phổ biến hiện nay" />
                            <small class="text-muted">Mô tả chi tiết về tình trạng sử dụng và phổ biến hiện nay</small>
                            <span asp-validation-for="CurrentStatus" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PreservationMethod" class="control-label">Cách bảo quản</label>
                            <input asp-for="PreservationMethod" class="form-control" placeholder="Mô tả các yêu cầu bảo quản" />
                            <small class="text-muted">Mô tả các yêu cầu đặc biệt để bảo quản trang sức (nhiệt độ, độ ẩm, ánh sáng...)</small>
                            <span asp-validation-for="PreservationMethod" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="DisplayedItems" class="control-label">Hiện vật trưng bày</label>
                            <input asp-for="DisplayedItems" class="form-control" placeholder="Thông tin về hiện vật được trưng bày tại bảo tàng, triển lãm" />
                            <small class="text-muted">Thông tin về các hiện vật tương tự được lưu giữ và trưng bày tại bảo tàng, triển lãm</small>
                            <span asp-validation-for="DisplayedItems" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
