@using Common;
@using Datas.Models.DomainModels
@model List<PeopleConfirm>
@if(Model.Count> 0)
{
    foreach (var item in Model)
    {
        <div>
            <span style="color: cornflowerblue;">@item.UpdateDate.ToString("dd/MM/yyyy HH:mm:ss") - @item.ConfirmStatus.DisplayName():</span>
            @if (!string.IsNullOrEmpty(item.Details))
            {
                <span style="word-break:break-word;">@item.Details</span>
            }
            else
            {
                <span style="font-style: italic;">...</span>
            }
        </div>
    }
}
else
{
    <span style="font-style: italic;">Chưa có dữ liệu</span>
}
