@using Common
@model Datas.Models.ViewModels.InstrumentModel
<div class="row">
    <div class="col-md-12">
        <!-- New form group for Chất liệu -->
        <div class="form-group">
            <label asp-for="Material" class="control-label">Chất liệu</label>
            <div class="col-md-12">
                <input asp-for="Material" class="form-control" placeholder="Gỗ, tre, đồng, da động vật…" />
            </div>
            <div>
                <span asp-validation-for="Material" class="text-danger"></span>
            </div>
        </div>

        <!-- New form group for Cấu tạo -->
        <div class="form-group">
            <label asp-for="Structure" class="control-label">Cấu tạo</label>
            <div class="col-md-12">
                <textarea asp-for="Structure" class="form-control" placeholder="Mô tả chi tiết về các bộ phận của nhạc cụ"></textarea>
            </div>
            <div>
                <span asp-validation-for="Structure" class="text-danger"></span>
            </div>
        </div>

        <!-- New form group for Kích thước -->
        <div class="form-group">
            <label asp-for="Dimensions" class="control-label">Kích thước</label>
            <div class="col-md-12">
                <input asp-for="Dimensions" class="form-control" placeholder="Dài, rộng, cao (nếu cần)" />
            </div>
            <div>
                <span asp-validation-for="Dimensions" class="text-danger"></span>
            </div>
        </div>

        <!-- New form group for Cách chơi -->
        <div class="form-group">
            <label asp-for="PlayingMethod" class="control-label">Cách chơi</label>
            <div class="col-md-12">
                <input asp-for="PlayingMethod" class="form-control" placeholder="Gảy, gõ, thổi, kéo, vỗ…" />
            </div>
            <div>
                <span asp-validation-for="PlayingMethod" class="text-danger"></span>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    let openFile;
    let idx = 0;
    let options;
    $(function () {
        var myCommands = elFinder.prototype._options.commands;
        options = {
            baseUrl: "/lib/elfinder/",
            url: "/Admin/file-system/connector",
            rememberLastDir: false,
            commands: myCommands,
            lang: 'vi',
            commandsOptions: {
                getfile: {
                    oncomplete: 'close' // destroy elFinder after file selection
                }
            },
            getFileCallback: function (a, b) {
                document.getElementById("Image" + idx).value = "/" + a.path;
            },
            uiOptions: {
                toolbar: [
                    ['back', 'forward'],
                    ['reload'],
                    ['home', 'up'],
                    ['mkdir', 'mkfile', 'upload'],
                    ['open', 'download'],
                    ['undo', 'redo'],
                    ['info'],
                    ['quicklook'],
                    ['copy', 'cut', 'paste'],
                    ['rm'],
                    ['duplicate', 'rename', 'edit'],
                    ['selectall', 'selectnone', 'selectinvert'],
                    ['view', 'sort']
                ]
            },
            lang: 'vi',
        };
    });

    function BrowseServerImage(id) {
        idx = id;
        if (!openFile) {
            openFile = $('#image-finder').dialogelfinder(options);
        }
        else {
            openFile.dialogelfinder('open');
        }
    }
</script>