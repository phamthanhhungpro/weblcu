@using Common
@model Datas.Models.ViewModels.LandmarkModel

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Architecture" class="control-label">Kiến trúc/Tự nhiên</label>
                    <textarea asp-for="Architecture" class="form-control ckeditor" rows="6"></textarea>
                    <small class="form-text text-muted">Mô tả chi tiết về kiến trúc công trình hoặc cảnh quan tự nhiên của di tích</small>
                    <span asp-validation-for="Architecture" class="text-danger"></span>
                </div>

                <div class="row mt-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="BuildingMaterial" class="control-label">Chất liệu xây dựng</label>
                            <textarea asp-for="BuildingMaterial" class="form-control" rows="3"></textarea>
                            <small class="form-text text-muted">Liệt kê các vật liệu chính được sử dụng trong công trình</small>
                            <span asp-validation-for="BuildingMaterial" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CurrentCondition" class="control-label">Tình trạng hiện tại</label>
                            <textarea asp-for="CurrentCondition" class="form-control" rows="3"></textarea>
                            <small class="form-text text-muted">Mô tả tình trạng bảo tồn và tu bổ hiện tại của di tích</small>
                            <span asp-validation-for="CurrentCondition" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="SizeScale" class="control-label">Diện tích & Quy mô</label>
                            <div class="input-group">
                                <textarea asp-for="SizeScale" class="form-control" rows="3"></textarea>
                            </div>
                            <small class="form-text text-muted">Thông tin về diện tích tổng thể và các khu vực chính của di tích</small>
                            <span asp-validation-for="SizeScale" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <label asp-for="Exhibits" class="control-label">Hiện vật trưng bày</label>
                    <textarea asp-for="Exhibits" class="form-control ckeditor" rows="6"></textarea>
                    <small class="form-text text-muted">Liệt kê và mô tả các hiện vật, cổ vật, tượng được trưng bày tại di tích</small>
                    <span asp-validation-for="Exhibits" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        // Initialize CKEditor for specific textareas that need rich text editing
        ['Architecture', 'Exhibits'].forEach(function(fieldId) {
            CKEDITOR.replace(fieldId, {
                height: '300px',
                toolbarGroups: [
                    { name: 'document', groups: ['mode', 'document', 'doctools'] },
                    { name: 'clipboard', groups: ['clipboard', 'undo'] },
                    { name: 'editing', groups: ['find', 'selection', 'spellchecker', 'editing'] },
                    '/',
                    { name: 'basicstyles', groups: ['basicstyles', 'cleanup'] },
                    { name: 'paragraph', groups: ['list', 'indent', 'blocks', 'align', 'paragraph'] },
                    { name: 'links', groups: ['links'] },
                    { name: 'insert', groups: ['insert'] },
                    '/',
                    { name: 'styles', groups: ['styles'] },
                    { name: 'colors', groups: ['colors'] },
                ],
                removeButtons: 'Save,NewPage,Preview,Print,Templates,Cut,Copy,Paste,PasteText,PasteFromWord,Find,Replace,SelectAll,Scayt,Form,Checkbox,Radio,TextField,Textarea,Select,Button,ImageButton,HiddenField,Strike,Subscript,Superscript,CopyFormatting,RemoveFormat,NumberedList,BulletedList,Outdent,Indent,Blockquote,CreateDiv,JustifyLeft,JustifyCenter,JustifyRight,JustifyBlock,BidiLtr,BidiRtl,Language,Link,Unlink,Anchor,Flash,HorizontalRule,Smiley,SpecialChar,PageBreak,Iframe,Styles,Format,Font,FontSize,TextColor,BGColor,Maximize,ShowBlocks,About'
            });
        });
    });
</script>
